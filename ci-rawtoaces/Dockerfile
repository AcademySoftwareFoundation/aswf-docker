# Comment out this block to use Conan packages
FROM ${ASWF_ORG}/ci-common:${CI_COMMON_VERSION}-clang${ASWF_CLANG_MAJOR_VERSION} AS ci-rawtoaces


ARG ASWF_ORG
ARG ASWF_CONAN_HOME
ARG ASWF_PKG_ORG
ARG ASWF_VERSION
ARG CI_COMMON_VERSION
ARG ASWF_PYSIDE_CLANG_VERSION
ARG ASWF_CONAN_CHANNEL



ARG ASWF_BOOST_VERSION
ARG ASWF_CERES_SOLVER_VERSION
ARG ASWF_IMATH_VERSION
ARG ASWF_LIBRAW_VERSION
ARG ASWF_OIIO_VERSION
