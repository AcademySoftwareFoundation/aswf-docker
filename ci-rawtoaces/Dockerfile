LABEL org.opencontainers.image.name="$ASWF_ORG/ci-rawtoaces"
LABEL org.opencontainers.image.title="rawtoaces CI Docker Image"
LABEL org.opencontainers.image.description="Contains: Python and other rawtoaces upstream dependencies\
